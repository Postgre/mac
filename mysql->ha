# mysql下载
wget https://cdn.mysql.com//Downloads/MySQL-5.7/mysql-5.7.20-linux-glibc2.12-x86_64.tar
tar -xvf mysql-5.7.20-linux-glibc2.12-x86_64.tar
tar -zxvf mysql-5.7.20-linux-glibc2.12-x86_64.tar.gz

# 添加必要的组和拥有者
groupadd mysql
useradd -r -g mysql mysql

#安装cmake
wget https://cmake.org/files/v3.10/cmake-3.10.0-rc1-Linux-x86_64.tar.gz

#安装mysql
mkdir /usr/local/mysql
mkdir /usr/local/mysql/data
